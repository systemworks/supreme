<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit.supreme.statement</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook[@colspan='4']" position="inside">
            <page string='Banking Details'>
              <group>
               <field name="bank"/>
               <field name="branch"/>
               <field name="current_account"/>
             </group>
            </page>
          </xpath>
        </field>
    </record>
</odoo>
